# Build settings for alpha_split

ifndef MCU
    MCU = atxmega64a4u
endif

C_SRC += boards/alpha_split/alpha_split_util.c

CFLAGS += -DCHECK_PORT=PORTC
CFLAGS += -DCHECK_PIN=PIN1_bm

CDEFS += -DCHECK_PORT=PORTC
CDEFS += -DCHECK_PIN=PIN1_bm
CDEFS += -DCHECK_PIN_VECT=PORTC_INT1_vect


# VBUS_CHECK pin on pin C1
