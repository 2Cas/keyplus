#### v2
# Note: USB_SEL is connected to I2C_OE_LEFT
CFLAGS += -DALPHA_SPLIT_V2
CFLAGS += -DI2C_OE_LEFT_PORT=PORTR
CFLAGS += -DI2C_OE_LEFT_PIN=PIN0_bm

CFLAGS += -DI2C_OE_RIGHT_PORT=PORTE
CFLAGS += -DI2C_OE_RIGHT_PIN=PIN3_bm

CFLAGS += -DUSB_OE_PORT=PORTR
CFLAGS += -DUSB_OE_PIN=PIN1_bm

CDEFS += -DNRF24_CE_PORT=PORTR
CDEFS += -DNRF24_CE_PIN=PIN0_bm

CDEFS += -DNRF24_IRQ_PORT=PORTR
CDEFS += -DNRF24_IRQ_PIN=PIN1_bm

VID = 6666
PID = 1111

USE_USB := 1
USE_SCANNER := 1
USE_NRF24 := 1
USE_CHECK_PIN := 1
USE_I2C := 1
USE_HARDWARE_SPECIFIC_SCAN := 0
